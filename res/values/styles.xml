    <style name="Horiz_Linear_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="guide_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/guide_text_style_textSize</item>
    </style>

    <style name="Keybg_larger_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">@dimen/Keybg_larger_style_textSize</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/press_key_bg</item>
    </style>

    <style name="Keybg_black_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">@dimen/Keybg_black_style_textSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/press_key_bg_black</item>
    </style>

    <style name="button_week_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btn_listtype</item>
        <item name="android:textSize">@dimen/default_textSize</item>
    </style>

    <style name="layout_guide_btn_style">
        <item name="android:layout_width">@dimen/layout_guide_btn_layout_width</item>
        <item name="android:layout_height">@dimen/layout_guide_btn_layout_height</item>
    </style>

    <style name="layout_controller_up_style">
        <item name="android:layout_width">@dimen/layout_controller_up_layout_width</item>
        <item name="android:layout_height">@dimen/layout_controller_up_layout_height</item>
    </style>

    <style name="layout_programlist_btn_type_style">
        <item name="android:layout_width">@dimen/layout_programlist_btn_type_layout_width</item>
        <item name="android:layout_height">@dimen/layout_programlist_btn_type_layout_height</item>
    </style>

    <style name="layout_programlist_icon_style">
        <item name="android:layout_width">@dimen/layout_programlist_image_icon_layout_width</item>
        <item name="android:layout_height">@dimen/layout_programlist_image_icon_layout_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="popup_menu_style">
        <item name="android:layout_width">@dimen/layout_programlist_btn_showmenu_layout_width</item>
        <item name="android:layout_height">@dimen/layout_programlist_btn_showmenu_layout_height</item>
        <item name="android:background">@drawable/menu_show</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
    <style name="AnimLeft" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>
    
    <style name="AnimRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
    
</resources>