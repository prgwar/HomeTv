<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Home tv styles -->
	<style name="notitle_bar"  >
	    <item name="android:windowNoTitle">true</item>
	</style>
	<style name="base_w_h">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="title_hint_style">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">@dimen/title_text_size</item>
	    <item name="android:textColor">#33b5e5</item>
	    <item name="android:drawableBottom">@drawable/title_divide_blue</item>
	    <item name="android:layout_marginRight">8.0dp</item>
	    <item name="android:layout_marginLeft">8.0dp</item>
	    <item name="android:layout_marginTop">20.0dp</item>
	    <item name="android:singleLine">true</item>
	</style>
	
	<style name="textview_in_login_layout">
	     <item name="android:layout_width">fill_parent</item>
	     <item name="android:layout_height">fill_parent</item>
	     <item name="android:layout_weight">2</item>
	     <item name="android:gravity">center_vertical|left</item>
	     <item name="android:textSize">20sp</item>
	     <item name="android:textColor">#000000</item>
	     <item name="android:singleLine">true</item>
	</style>
	<style name="setting_item_textview_style" >
	    <item name="android:singleLine">true</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textSize">@dimen/setting_item_text_size</item>
	    <item name="android:layout_gravity">center_vertical</item>
	</style>
	<style name="setting_item_divide_style">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@drawable/item_divider_gray</item>
	    <item name="android:layout_marginRight">8.0dp</item>
	    <item name="android:layout_marginLeft">8.0dp</item>
	    <item name="android:layout_marginTop">11.0dp</item>
	</style>
	
	<style name="toggle_btn_style">
        <item name="android:layout_width">@dimen/toggle_btn_width</item>
	    <item name="android:layout_height">@dimen/toggle_btn_heigth</item>
	    <item name="android:textOn">""</item>
	    <item name="android:textOff">""</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:background">@drawable/toggle_btn_style</item>
	</style>
	
	<style name="setting_arrow_right_style">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">@dimen/setting_right_arrow_height</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:layout_alignParentRight">true</item>
	    <item name="android:background">@drawable/selector_for_arrow_rigth</item>
	</style>
	 <!-- 对话框样式 -->
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
		  <item name="android:windowFrame">@null</item>
		  <item name="android:windowIsFloating">true</item>
		  <item name="android:windowIsTranslucent">true</item>
		  <item name="android:windowNoTitle">true</item>
		  <item name="android:background">@android:color/transparent</item>
		  <item name="android:windowBackground">@android:color/transparent</item>
		  <item name="android:backgroundDimEnabled">true</item>
		  <item name="android:backgroundDimAmount">0.6</item>
 </style>
    <style name="pop_animstyle">
      	<item name="android:windowEnterAnimation">@anim/pop_window_anim_in</item>
   		<item name="android:windowExitAnimation">@anim/pop_window_anim_out</item>
    </style>
     <style name="more_menu_pop_animstyle">
      	<item name="android:windowEnterAnimation">@anim/more_menu_pop_window_anim_in</item>
   		<item name="android:windowExitAnimation">@anim/more_menu_pop_window_anim_out</item>
    </style>
    
      <style name="short_epg_pop_animstyle">
      	<item name="android:windowEnterAnimation">@anim/short_epg_pop_window_anim_in</item>
   		<item name="android:windowExitAnimation">@anim/short_epg_pop_window_anim_out</item>
    </style>
