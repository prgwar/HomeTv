<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/default_bg" >
    <include layout="@layout/common_head_layout"/>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
	    >
	    <ImageView 
	        android:id="@+id/brand"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:contentDescription="@null"
	        android:background="@drawable/hometv_logo"/>
	    <TextView 
	        android:id="@+id/tv_cur_appver"
	        android:layout_below="@id/brand"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:textColor="#000000"
	        android:layout_marginTop="8.0dp"
	        android:textSize="16sp"
	        android:text="V:  1.0"
	        />
	    <RelativeLayout
            android:id="@+id/upgradeLayout"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_below="@id/tv_cur_appver"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/common_strip_setting_top"
            android:clickable="true"
            android:focusable="true" >

            <TextView
                android:id="@+id/upgradeTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                 android:textColor="#000000"
                 android:textSize="16sp"
                android:text="@string/version_upgrade" />

            <ImageView
                android:id="@+id/upgradeNewFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30.0dip"
                android:contentDescription="@null"
                android:src="@drawable/plugin_new"
                android:visibility="gone" />

            <TextView
                android:id="@+id/versionInform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:duplicateParentState="true"
                android:text="@string/the_lasted_version"
                android:visibility="gone" />
        </RelativeLayout>
        
	     <RelativeLayout
            android:id="@+id/introduction"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_below="@id/upgradeLayout"
            android:background="@drawable/common_strip_setting_middle"
            android:clickable="true"
            android:focusable="true" >

            <ImageView
                android:id="@+id/introductionNewFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50.0dip"
                android:contentDescription="@null"
                android:src="@drawable/plugin_new"
                android:visibility="gone" />

            <TextView
                android:id="@+id/introductionTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/common_arrow_right_selector"
                android:duplicateParentState="true"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                 android:textColor="#000000"
                 android:textSize="16sp"
                android:text="@string/feature_info" />
        </RelativeLayout>
	</RelativeLayout>
	
</LinearLayout>
