<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
     >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	<TextView
	    android:id="@+id/dlna_setting_head" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/dlna_setting"
	    android:gravity="center"
	    android:textColor="#000000"
	    android:drawableBottom="@drawable/item_divider_gray"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <FrameLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="共享图片"
	            android:layout_gravity="left|center"
	            android:textColor="#000000"
	            />
	        <CheckBox 
	          android:id="@+id/checkbox_share_pic"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="right|center"
              android:background="@drawable/checkbox_selector"
              android:button="@null"
	        />
	    </FrameLayout>
	     <FrameLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="共享视频"
	            android:layout_gravity="left|center"
	            android:textColor="#000000"
	            />
	        <CheckBox 
	          android:id="@+id/checkbox_share_video"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="right|center"
              android:background="@drawable/checkbox_selector"
              android:button="@null"
	        />
	    </FrameLayout>
	     <FrameLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="共享音乐"
	            android:layout_gravity="left|center"
	            android:textColor="#000000"
	            />
	        <CheckBox 
	          android:id="@+id/checkbox_share_music"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="right|center"
              android:background="@drawable/checkbox_selector"
              android:button="@null"
	        />
	    </FrameLayout>
	      <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:layout_gravity="center"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="DLNA设备名"
	            android:layout_gravity="center"
	            android:textColor="#000000"
	            />
	        <EditText
	          android:layout_marginLeft="8dp"
	          android:id="@+id/edit_dlna_name"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="center"
              android:textColor="#000000"
              android:textCursorDrawable="@null"
              android:maxLength="10"
	        />
	    </LinearLayout>
	  
	</LinearLayout>
	<Button 
	    android:id="@+id/btn_dlna_setting_commit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/selector_for_tvbtn"
	    android:text="@string/sure"
	    android:layout_margin="5dp"/>
	</LinearLayout>
</ScrollView>
