<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center"
    android:padding="5dp"
    android:descendantFocusability= "blocksDescendants"
     >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="center">
     <TextView 
	    android:id="@+id/dlna_device_name"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="dkdfdfkdkfd"
	    android:textColor="#000000"
	    android:layout_gravity="center"
	    />
	<TextView 
	    android:id="@+id/dlna_device_ip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="8dp"
	    android:gravity="center"
	    android:text="192.168.1.100"
	    android:layout_gravity="center"
	    android:textColor="#000000"
	    />
    </LinearLayout>
	<ImageView 
	    android:contentDescription="@null"
	    android:id="@+id/dlna_device_checked"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:enabled="false"
	    android:background="@drawable/check_box_default"
	    />
	<!-- <CheckBox 
	    android:id="@+id/dlna_device_checked"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:button="@drawable/dlna_item_checkbox_selector" 
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:enabled="false"
	    /> -->
</RelativeLayout>
